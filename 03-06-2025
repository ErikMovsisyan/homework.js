//task 9
    unction cont(haystack,needle)  {
    if(needle.length>haystack.length) return false;
    if(needle == '') return false;
    for(let i = 0; i<=haystack.length-needle.length;++i)    {
        let match = true
        for(let j = 0; j < needle.length; ++j)  {
            if(haystack[i+j] !== needle[j])  {
               match = false
               break
            }
        }
        if(match) return true;
    }
    return false
}

// task 10
function split(str,seperator) {
    let result=[];
    let current = '';
    for(let i = 0; i<str.length;i++)    {
        if(str[i]===seperator)  {
result.push(current);
current = '';
        }
        else{
            current+=str[i];
        }
    }
    result.push(current);
    return result;

   }
   console.log(split("hello world",'l'))

   
   // task 11

   unction pop(arr)  {
let result = arr[arr.length - 1]
arr.length-=1
return result
}
console.log(pope([1,2,3,4,9]))

