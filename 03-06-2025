// task 6 
    const text = "learning Java"
const text2 = "Java"
let found = false;
for(let i = 0; i <= text.length-text2.length;i++)   {
    let match = true
    for(let j = 0; j < text2.length;j++)    {
        if(text[i+j]!==text2[j]) {
match = false
break
        }
    }
    if(match)   {
        found = true;
        break;
    }
}
console.log(found)

